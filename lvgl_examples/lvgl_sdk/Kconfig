
menuconfig MCUX_COMPONENT_middleware.lvgl
    bool "LVGL"
    imply MCUX_COMPONENT_middleware.lvgl.template

if MCUX_COMPONENT_middleware.lvgl

    # For MCUX SDK integration.
    # In MCUX SDK, the Kconfig string is translate macro with no quote,
    # to generate macro with quote, the Kconfig string value should be
    # set as \""string\"".
    config LV_OS_CUSTOM_INCLUDE
        default "\"stdint.h\""

    config LV_DRAW_SW_ASM_CUSTOM_INCLUDE
        default "\"\""

    config LV_ASSERT_HANDLER_INCLUDE
        default "\"assert.h\""

    config LV_GLOBAL_CUSTOM_INCLUDE
        default "\"lv_global.h\""

    config LV_TXT_BREAK_CHARS
        default "\" ,.;:-_)}\""

    config LV_PROFILER_INCLUDE
        default "\"lvgl/src/misc/lv_profiler_builtin.h\""

    osource "${SdkRootDirPath}/middleware/lvgl/Kconfig"

endif

# Template
config MCUX_COMPONENT_middleware.lvgl.template
    bool "LVGL project template"

config MCUX_COMPONENT_middleware.lvgl.demo.common
    bool "LVGL demo common"
    imply MCUX_COMPONENT_middleware.lvgl

