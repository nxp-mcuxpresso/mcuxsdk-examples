rsource "${core_id}/Kconfig"
rsource "Kconfig.defconfig"

config MCUX_HW_BOARD_evkmimxrt685
    bool
    default y
    imply MCUX_HW_DEVICE_MIMXRT685S
    imply MCUX_COMPONENT_driver.clock
    imply MCUX_COMPONENT_driver.common
    imply MCUX_COMPONENT_driver.power if MCUX_HW_DEVICE_MIMXRT685S_CORE_ID_cm33
    imply MCUX_COMPONENT_driver.flexspi if MCUX_HW_DEVICE_MIMXRT685S_CORE_ID_cm33
    imply MCUX_COMPONENT_driver.cache_cache64 if MCUX_HW_DEVICE_MIMXRT685S_CORE_ID_cm33
    imply MCUX_COMPONENT_driver.flexcomm_usart
    imply MCUX_COMPONENT_driver.flash_config if MCUX_HW_DEVICE_MIMXRT685S_CORE_ID_cm33
    imply MCUX_COMPONENT_driver.flexcomm
    imply MCUX_COMPONENT_driver.lpc_iopctl
    imply MCUX_COMPONENT_driver.lpc_gpio
    imply MCUX_COMPONENT_driver.reset if MCUX_HW_DEVICE_MIMXRT685S_CORE_ID_cm33
