rsource "Kconfig.defconfig"

config MCUX_HW_BOARD_lpcxpresso804
    bool
    default y
    imply MCUX_HW_DEVICE_LPC804
    imply MCUX_COMPONENT_driver.clock
    imply MCUX_COMPONENT_driver.common
    imply MCUX_COMPONENT_driver.lpc_gpio
    imply MCUX_COMPONENT_driver.lpc_iocon_lite
    imply MCUX_COMPONENT_driver.lpc_miniusart
    imply MCUX_COMPONENT_driver.power
    imply MCUX_COMPONENT_driver.rom_api
    imply MCUX_COMPONENT_driver.swm
    imply MCUX_COMPONENT_driver.syscon

    ## Board project segment dependency data

    select MCUX_COMPONENT_driver.lpc_iocon_lite if MCUX_PRJSEG_module.board.pinmux
    select MCUX_COMPONENT_driver.lpc_gpio if MCUX_PRJSEG_module.board.pinmux
    select MCUX_COMPONENT_driver.clock if MCUX_PRJSEG_module.board.clock    
    select MCUX_COMPONENT_driver.power if MCUX_PRJSEG_module.board.clock
    select MCUX_COMPONENT_component.miniusart_adapter if MCUX_PRJSEG_module.board.console_lite
    select MCUX_COMPONENT_driver.miniusart if MCUX_PRJSEG_module.board.console_lite
