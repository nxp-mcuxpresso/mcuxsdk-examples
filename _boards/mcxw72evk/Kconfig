rsource "${core_id}/Kconfig"
rsource "Kconfig.defconfig"

config MCUX_HW_BOARD_mcxw72evk
    bool
    default y
    imply MCUX_HW_DEVICE_MCXW727C
    imply MCUX_COMPONENT_driver.clock
    imply MCUX_COMPONENT_driver.common
    imply MCUX_COMPONENT_driver.lpuart
    imply MCUX_COMPONENT_driver.port
    imply MCUX_COMPONENT_driver.gpio
    imply MCUX_COMPONENT_driver.ccm32k
    imply MCUX_COMPONENT_driver.spc

config MCUX_COMPONENT_device.utility
    bool "utility for MCXW727C"
    default n
