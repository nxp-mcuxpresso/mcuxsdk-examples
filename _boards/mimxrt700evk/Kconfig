rsource "${core_id}/Kconfig"
rsource "Kconfig.defconfig"
rsource "shields/a8974/Kconfig"
rsource "../../_common/project_segments/freertos/examples/tickless/Kconfig.prjseg"

config MCUX_HW_BOARD_mimxrt700evk
    bool
    default y
    imply MCUX_HW_DEVICE_MIMXRT798S
    imply MCUX_COMPONENT_driver.clock
    imply MCUX_COMPONENT_driver.common
    imply MCUX_COMPONENT_driver.power if MCUX_HW_DEVICE_MIMXRT798S_CORE_ID_cm33_core0 || MCUX_HW_DEVICE_MIMXRT798S_CORE_ID_cm33_core1
    imply MCUX_COMPONENT_driver.xspi if MCUX_HW_DEVICE_MIMXRT798S_CORE_ID_cm33_core0
    imply MCUX_COMPONENT_driver.cache_xcache if MCUX_HW_DEVICE_MIMXRT798S_CORE_ID_cm33_core0
    imply MCUX_COMPONENT_driver.lpuart
    imply MCUX_COMPONENT_driver.flash_config if MCUX_HW_DEVICE_MIMXRT798S_CORE_ID_cm33_core0
    imply MCUX_COMPONENT_driver.lpflexcomm
    imply MCUX_COMPONENT_driver.lpc_iopctl
    imply MCUX_COMPONENT_driver.gpio
    imply MCUX_COMPONENT_driver.glikey if MCUX_HW_DEVICE_MIMXRT798S_CORE_ID_cm33_core0 || MCUX_HW_DEVICE_MIMXRT798S_CORE_ID_cm33_core1
    imply MCUX_COMPONENT_driver.reset if MCUX_HW_DEVICE_MIMXRT798S_CORE_ID_cm33_core0 || MCUX_HW_DEVICE_MIMXRT798S_CORE_ID_cm33_core1
