rsource "${core_id}/Kconfig"
rsource "Kconfig.defconfig"
rsource "../../_common/project_segments/freertos/examples/tickless/Kconfig.prjseg"

config MCUX_HW_BOARD_evkmimxrt1180
    bool
    default y
    imply MCUX_HW_DEVICE_MIMXRT1189

    select MCUX_HW_BOARD_interface.has_m2_slot
    imply MCUX_COMPONENT_driver.clock
    imply MCUX_COMPONENT_driver.rgpio
    imply MCUX_COMPONENT_driver.iomuxc
    imply MCUX_COMPONENT_driver.memory
    imply MCUX_COMPONENT_driver.ele_base_api
    imply MCUX_COMPONENT_driver.dcdc_3
    imply MCUX_COMPONENT_driver.gpc_3
    imply MCUX_COMPONENT_driver.anadig_pmu_1
    imply MCUX_COMPONENT_driver.src_3
    imply MCUX_COMPONENT_driver.misc
    select MCUX_COMPONENT_component.lpuart_adapter  if MCUX_COMPONENT_component.serial_manager_uart
    select MCUX_COMPONENT_component.lpuart_adapter  if MCUX_COMPONENT_utility.debug_console_lite
